<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            app:layout_constraintStart_toEndOf="@id/recipe_image"
            app:layout_constraintTop_toTopOf="@id/recipe_image"
            tools:text="Nutela Pie" />

        <TextView
            android:id="@+id/recipe_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            app:layout_constraintStart_toEndOf="@id/recipe_image"
            app:layout_constraintTop_toBottomOf="@id/recipe_name"
            tools:text="ingredients : 9" />


        <TextView
            android:id="@+id/recipe_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            app:layout_constraintStart_toEndOf="@id/recipe_image"
            app:layout_constraintTop_toBottomOf="@id/recipe_ingredients"
            tools:text="steps : 7" />

        <TextView
            android:id="@+id/recipe_servings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            app:layout_constraintStart_toEndOf="@id/recipe_image"
            app:layout_constraintTop_toBottomOf="@id/recipe_steps"
            tools:text="servings : 8" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>